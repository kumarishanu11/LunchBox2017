<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="LunchBoxAplication" transaction-type="RESOURCE_LOCAL">
	
	<class>model.Admin</class>
	<class>model.Customer</class>
	<class>model.Vendor</class>
	<class>model.FoodCatalog</class>
	<class>model.FoodCatalogCategoryBridge</class>
	<class>model.FoodCategory</class>
	<class>model.FoodItem</class>
	<properties>
         
	      
			<property name="javax.persistence.jdbc.driver" value="oracle.jdbc.driver.OracleDriver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:oracle:oci:@localhost:1521:xe"/>
			<property name="javax.persistence.jdbc.user" value="lunchbox"/>
			<property name="javax.persistence.jdbc.password" value="LUNCHBOX"/>
			<property name="hibernate.connection.pool_size" value="1"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.OracleDialect"/>
			<property name="show_sql" value="true"/>
			<property name="hibernate.temp.use_jdbc_metadata_defaults" value="false"/>
		
         
      </properties>			
		
	</persistence-unit>
</persistence>
